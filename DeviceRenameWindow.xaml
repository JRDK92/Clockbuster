<Window x:Class="ClockbusterWPF.DeviceRenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rename Device" 
        Height="250" 
        Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource DialogButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="18,18,18,13">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                  Text="Rename This Device" 
                  FontSize="18" 
                  FontWeight="Bold" 
                  Margin="-7,-8,0,15"/>

        <TextBlock Grid.Row="1" 
                  Text="Please enter a new name for this device" 
                  FontSize="13" 
                  Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" 
                  Text="Device Name:" 
                  FontSize="13" 
                  FontWeight="SemiBold"
                  Margin="0,4,0,4"/>

        <TextBox x:Name="TxtDeviceName" 
                Grid.Row="3"
                FontSize="14" 
                Padding="8,6"
                Margin="0,0,0,10"/>

        <TextBlock Grid.Row="4" 
                  Text="Examples: work-laptop, home-pc, johns-desktop" 
                  FontSize="11" 
                  FontStyle="Italic"
                  Foreground="Gray"
                  VerticalAlignment="Top"
                  Margin="0,0,0,0"/>

        <StackPanel Grid.Row="5" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,15,0,0">
            <Button Content="Cancel" 
                   Style="{StaticResource CancelButton}"
                   Click="BtnCancel_Click"
                   Margin="0,0,10,0"/>
            <Button Content="OK" 
                   Style="{StaticResource DialogButton}"
                   Click="BtnOk_Click"/>
        </StackPanel>
    </Grid>
</Window>