<Window x:Class="ClockbusterWPF.InitialSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Initial Setup - Clockbuster" 
        Height="440" 
        Width="610"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <Style x:Key="SetupButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource SetupButton}">
            <Setter Property="Background" Value="#F3F3F3"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EAEAEA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="40">
        <StackPanel x:Name="Step1Panel" Visibility="Visible" Margin="0,0,0,-16">
            <TextBlock Text="Welcome to Clockbuster!" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Margin="0,0,0,25"/>

            <TextBlock Text="This app creates separate database files for each device." 
                       FontSize="14" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Please give this device a unique name:" 
                       FontSize="14" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,25"/>

            <TextBlock Text="Device Name" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <TextBox x:Name="TxtDeviceName" 
                    FontSize="16" 
                    Padding="10,8"
                    Margin="0,0,0,10"/>

            <TextBlock Text="Examples: work-laptop, home-pc, johns-desktop" 
                       FontSize="12" 
                       FontStyle="Italic"
                       Foreground="Gray"
                       Margin="0,0,0,50"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" 
                       Style="{StaticResource SecondaryButton}"
                       Click="BtnCancel_Click"
                       Margin="0,0,12,0"/>
                <Button Content="Next" 
                       Style="{StaticResource SetupButton}"
                       Click="BtnNext_Click"/>
            </StackPanel>
        </StackPanel>

        <StackPanel x:Name="Step2Panel" Visibility="Collapsed">
            <TextBlock Text="Choose Storage Location" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Margin="0,0,0,25"/>

            <TextBlock Text="Where would you like to save your time tracking data?" 
                       FontSize="14" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,30"/>

            <TextBlock Text="Selected Folder" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <Grid Margin="0,0,0,50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border BorderBrush="#CCCCCC" 
                       BorderThickness="1" 
                       CornerRadius="4,0,0,4"
                       Padding="10"
                       Background="#F9F9F9">
                    <TextBlock x:Name="TxtLocationDisplay" 
                              Text="No folder selected" 
                              FontSize="14"
                              Foreground="Gray"
                              VerticalAlignment="Center"
                              TextWrapping="NoWrap"/>
                </Border>

                <Button Grid.Column="1"
                       Content="Browse" 
                       Style="{StaticResource SecondaryButton}"
                       Width="100"
                       Click="BtnBrowse_Click"
                       BorderThickness="0,1,1,1"
                       BorderBrush="#CCCCCC"/>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Back" 
                       Style="{StaticResource SecondaryButton}"
                       Click="BtnBack_Click"
                       Margin="0,0,12,0"/>
                <Button x:Name="BtnFinish"
                       Content="Proceed" 
                       Style="{StaticResource SetupButton}"
                       Click="BtnFinish_Click"
                       IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>